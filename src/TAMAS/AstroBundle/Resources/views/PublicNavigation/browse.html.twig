{% extends 'TAMASAstroBundle::layout.html.twig' %}

{% block title %}
	Browse digital corpus â€” {{ parent() }}
{% endblock %}

{% block tamasastro_body %}
	<link rel="stylesheet" href="{{ asset('css/slider.css')}}">
	<link rel="stylesheet" href="{{ asset('css/static-pages.css')}}">
	<link rel="stylesheet" href="{{ asset('css/svg-illustration.css')}}">

	{# PAGE HEADER #}
	{% include 'TAMASAstroBundle:Default:Templates/pageHeader.html.twig' with {"title":"Browse digital corpus", "tag":"h1"} %}

	<div class="row">
		<div class="col-md-offset-1 col-md-5" style="text-align: center;">
			<h2>Historical navigation</h2>
			<a href="{{path('tamas_astro_historicalNavigation')}}">
				<div class="picto-wrapper hist-nav">
					<img class="nav-picto" src="{{ asset('img/pictograms/hist-nav.png')}}" width="125" alt=""/>
				</div>
			</a>
			<p class="nav-desc">Discover the historical aspects of the digital corpus.</p>
			<div class="learn-more">
				<button id="hist-nav" class="btn btn-beige">Learn more</button>
			</div>
		</div>
		<div class="col-md-5" style="text-align: center;">
			<h2>Astronomical navigation</h2>
			<a href="{{path('tamas_astro_astronomicalNavigation')}}">
				<div class="picto-wrapper astro-nav">
					<img class="nav-picto" src="{{ asset('img/pictograms/astro-nav.png')}}" width="125" alt=""/>
				</div>
			</a>
			<p class="nav-desc">Explore the astronomical aspects of DISHAS's data.</p>
			<div class="learn-more">
				<button id="astro-nav" class="btn btn-beige">Learn more</button>
			</div>
		</div>
	</div>

	<div id="hist-slider" class="slider row invisible">
		{% include 'TAMASAstroBundle:PublicNavigation:svgSlider.html.twig' with {'svgPaths':[
			"HistoricalNavigation/hist-nav1",
			"HistoricalNavigation/hist-nav2",
			"HistoricalNavigation/hist-nav3",
			"HistoricalNavigation/hist-nav4",
			"HistoricalNavigation/hist-nav5",
			"HistoricalNavigation/hist-nav6"
		]} %}
		<a class="learn-more" href="{{path('tamas_astro_historicalNavigation')}}">Go to historical navigation</a>
		<div style="padding-top: 20px">
			<table style="width: 40%; margin: auto">
				<tbody>
				<tr>
					<td style="text-align: center">
						{% include 'TAMASAstroBundle:Default:Templates/findAll.html.twig' with {'entity': 'primarySource', 'clickableArea': 'default'} %}
					</td>
					<td style="text-align: center">
						{% include 'TAMASAstroBundle:Default:Templates/findAll.html.twig' with {'entity': 'originalText', 'clickableArea': 'default'} %}
					</td>
					<td style="text-align: center">
						{% include 'TAMASAstroBundle:Default:Templates/findAll.html.twig' with {'entity': 'work', 'clickableArea': 'default'} %}
					</td>
				</tr>
				</tbody>
			</table>
		</div>
	</div>

	<div id="astro-slider" class="slider row invisible">
		{% include 'TAMASAstroBundle:PublicNavigation:svgSlider.html.twig' with {'svgPaths':[
			"AstronomicalNavigation/astro-nav1",
			"AstronomicalNavigation/astro-nav2",
			"AstronomicalNavigation/astro-nav3",
			"AstronomicalNavigation/astro-nav4",
			"AstronomicalNavigation/astro-nav5",
			"AstronomicalNavigation/astro-nav6",
			"AstronomicalNavigation/astro-nav7"
		]} %}
		<a class="learn-more" href="{{path('tamas_astro_astronomicalNavigation')}}">Go to astronomical navigation</a>
		<div style="padding-top: 20px">
			<table style="width: 40%; margin: auto">
				<tbody>
				<tr>
					<td style="text-align: center">
						{% include 'TAMASAstroBundle:Default:Templates/findAll.html.twig' with {'entity': 'formulaDefinition', 'clickableArea': 'default'} %}
					</td>
					<td style="text-align: center">
						{% include 'TAMASAstroBundle:Default:Templates/findAll.html.twig' with {'entity': 'editedText', 'clickableArea': 'default'} %}
					</td>
					<td style="text-align: center">
						{% include 'TAMASAstroBundle:Default:Templates/findAll.html.twig' with {'entity': 'parameterSet', 'clickableArea': 'default'} %}
					</td>
				</tr>
				</tbody>
			</table>
		</div>
	</div>

	{% include 'TAMASAstroBundle:PublicNavigation:findMore.html.twig' %}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{asset('js/slider.js')}}"></script>
	<script>
		let histSlider = $("#hist-slider");
		let astroSlider = $("#astro-slider");
		$("#astro-nav").click(ev => {
			histSlider.addClass("invisible");
			astroSlider.removeClass("invisible");
			astroSlider[0].scrollIntoView({behavior:"smooth", block: "center"});
		});
		$("#hist-nav").click(ev => {
			histSlider.removeClass("invisible");
			astroSlider.addClass("invisible");
			histSlider[0].scrollIntoView({behavior:"smooth", block: "center"});
		});
	</script>
{% endblock %}